{
  "manifest_version": 3,
  "name": "DHIMS2 Batch Uploader",
  "version": "1.0.0",
  "description": "Automate batch upload of patient records to DHIMS2 with intelligent API discovery",

  "permissions": [
    "storage",
    "notifications",
    "webRequest",
    "sidePanel"
  ],

  "host_permissions": [
    "https://events.chimgh.org/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
    {
      "matches": ["https://events.chimgh.org/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://events.chimgh.org/*"]
    }
  ]
}
