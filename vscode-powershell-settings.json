{
  // VS Code PowerShell Configuration
  // Add these settings to your VS Code settings.json

  // Specify which PowerShell to use (uncomment one)

  // Option 1: Use PowerShell 7+ (recommended if installed)
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // Option 2: Use Windows PowerShell 5.1
  // "terminal.integrated.defaultProfile.windows": "Windows PowerShell",

  // PowerShell profiles configuration
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo"]
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
      "icon": "terminal-powershell",
      "args": ["-NoLogo"]
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "icon": "terminal-cmd"
    }
  },

  // PowerShell extension settings
  "powershell.integratedConsole.showOnStartup": false,
  "powershell.promptToUpdatePowerShell": false,

  // Terminal settings
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontFamily": "CaskaydiaCove Nerd Font, CascadiaCode NF, Consolas",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line"
}
